<div class="mb-4">
  <h3>Register</h3>
</div>
<div class="mb-3">{{> message}}</div>
<form action="/users" method="post" id="register-form" novalidate>
  <div class="row mb-3">
    <label for="name" class="col-sm-1 col-form-label" style="text-align: end;">Name:</label>
    <div class="col-sm-2">
      <input name="name" type="text" class="form-control" id="name" value="" required>
      <div class="invalid-feedback">* name, please</div>
    </div>
  </div>
  <div class="row mb-3">
    <label for="email" class="col-sm-1 col-form-label" style="text-align: end;">Email:</label>
    <div class="col-sm-2">
      <input name="email" type="text" class="form-control" id="email" value="" required>
      <div class="invalid-feedback">* enter your email</div>
    </div>
  </div>
  <div class="row mb-3">
    <label for="password" class="col-sm-1 col-form-label" style="text-align: end;">Password:</label>
    <div class="col-sm-2">
      <input name="password" type="password" class="form-control" id="password" value="" required>
      <div class="invalid-feedback">* enter your password</div>
    </div>
  </div>
  <div class="row mb-3">
    <label for="confirmPassword" class="col-sm-1 col-form-label" style="text-align: end;">Confirm Password:</label>
    <div class="col-sm-2 pt-3" style="">
      <input name="confirmPassword" type="password" class="form-control" id="confirmPassword" value="" required>
      <div class="invalid-feedback">* confirm your password</div>
    </div>
  </div>
  <div>
    <input type="submit" value="submit"></input>
  </div>
</form>
<p></p>
<div>
  <span class="me-2">Already have an account?</span>
  <input type ="button" onclick="location.href='/login'" value="Log in"></input>
</div>