<form action="/todos/{{todo.id}}?_method=put" method="post"> <!--使用put方法，並導使用者輸入的資料傳遞至Todos/:id頁面-->
  <input type="text" value="{{todo.name}}" name="editedName" id="" required> <!--加入 required 來避免使用者跳過輸入-->
  <input class="form-check-input" type="checkbox" name="tickCheckbox" id="" value="done" style="margin-left: 4px; width: 21px; height: 21px;" {{#if todo.isComplete}} checked {{/if}}>
  <input type="submit" style="margin-left: 4px;" value="Save"></input>
  <input type ="button" onclick="location.href='/todos{{#if page}}?page={{page}}{{/if}}'" value="back" id=""></input>
</form>
<p></p>
{{> message}}