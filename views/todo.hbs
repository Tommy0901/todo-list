<ul class="list-group">
  <li class="list-group-item d-flex rounded-0 itemWidth">
    <input class="form-check-input" type="checkbox" name="" id="" disabled {{#if todo.isComplete}} checked {{/if}}>
    <div class="ms-2 me-auto">
      {{todo.name}}
    </div>
    <div class="d-flex">
      <input type ="button" onclick="location.href='/todos/{{todo.id}}/edit'" value="edit"></input>
      <input type ="button" onclick="location.href='/todos{{#if page}}?page={{page}}{{/if}}'" value="back" style="margin-left: 5px;"></input>
      <form action="/todos/{{todo.id}}?_method=delete" method="post" style="display: inline; margin-left: 5px;">
        <button type="submit">delete</button>
      </form>
    </div>
  </li>
  {{> message}}
</ul>
